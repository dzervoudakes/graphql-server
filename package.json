{
  "name": "graphql-server",
  "version": "0.1.0",
  "description": "Mini GraphQL server for fun.",
  "main": "index.js",
  "scripts": {
    "build": "yarn clean && tsc -p ./tsconfig.build.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "clean": "rimraf coverage dist",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "start": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.(spec|test).ts' --exec 'ts-node -r tsconfig-paths/register' src/index.ts",
    "test": "jest",
    "test:coverage": "yarn test --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dzervoudakes/graphql-server.git"
  },
  "author": "dzervoudakes",
  "license": "MIT",
  "dependencies": {
    "chalk": "4.1.1",
    "cors": "2.8.5",
    "express": "4.17.1",
    "express-graphql": "0.12.0",
    "graphql": "15.5.1",
    "mongoose": "5.13.2"
  },
  "devDependencies": {
    "@dztools/eslint-config-typescript": "1.1.2",
    "@dztools/prettier-config": "1.0.4",
    "@shelf/jest-mongodb": "2.0.1",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "26.0.24",
    "@types/node": "16.3.2",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.1",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "@typescript-eslint/parser": "4.28.3",
    "eslint": "7.30.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "4.3.8",
    "jest": "27.0.6",
    "lint-staged": "10.5.4",
    "mongodb": "3.6.9",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "supertest": "6.1.3",
    "ts-jest": "27.0.3",
    "ts-node": "10.1.0",
    "tsconfig-paths": "3.10.1",
    "tscpaths": "0.0.9",
    "typescript": "4.3.5",
    "uuid": "8.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">= 14.15.0",
    "yarn": ">= 1.22.4"
  }
}
