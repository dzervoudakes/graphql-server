{
  "name": "graphql-server",
  "version": "0.1.0",
  "description": "Mini GraphQL server for fun.",
  "main": "index.js",
  "scripts": {
    "build": "yarn clean && tsc -p ./tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "yarn lint -- --fix",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node -r tsconfig-paths/register' src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dzervoudakes/graphql-server.git"
  },
  "author": "dzervoudakes",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.1",
    "mongoose": "^5.13.2"
  },
  "devDependencies": {
    "@dztools/eslint-config-typescript": "^1.1.2",
    "@dztools/prettier-config": "^1.0.4",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">= 14.6.0",
    "yarn": ">= 1.22.4"
  }
}
